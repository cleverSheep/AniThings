<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.upi.cs.drake.anithings">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AniThingsApp"
        android:allowBackup="true"
        android:icon="@drawable/at6"
        android:label="@string/app_name"
        android:roundIcon="@drawable/at6"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Launcher">
        <activity android:name=".view.animelist.AnimeListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.detail.AnimeDetail"
            android:label="@string/title_activity_anime_detail"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>